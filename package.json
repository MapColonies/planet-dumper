{
  "name": "planet-dumper",
  "version": "4.0.0",
  "description": "a cli wrapper for planet-dump-ng and pg_dump functionality",
  "main": "./src/index.ts",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles ./package.json dist",
    "clean": "rimraf dist",
    "install": "npx husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/planet-dumper.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.39.0",
    "@map-colonies/js-logger": "^0.0.3",
    "@map-colonies/read-pkg": "0.0.1",
    "@map-colonies/telemetry": "3.0.0",
    "@opentelemetry/api": "1.0.1",
    "@opentelemetry/api-metrics": "0.23.0",
    "@opentelemetry/instrumentation-http": "0.23.0",
    "axios": "^0.24.0",
    "better-ajv-errors": "^1.1.2",
    "concat-stream": "^2.0.0",
    "config": "^3.3.6",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "valid-url": "^1.0.9",
    "yargs": "^17.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@map-colonies/eslint-config": "^3.0.1",
    "@map-colonies/prettier-config": "0.0.1",
    "@map-colonies/standard-version-update-helm-version": "^2.0.1",
    "@types/concat-stream": "^1.6.1",
    "@types/config": "0.0.39",
    "@types/express": "^4.17.13",
    "@types/valid-url": "^1.0.3",
    "@types/yargs": "^17.0.2",
    "commitlint": "^13.2.1",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.4.1",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "typescript": "^4.2.4"
  }
}
